<UserControl x:Name="Cart_Control" x:Class="SafetySharp.CaseStudies.Visualizations.CartControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SafetySharp.CaseStudies.Visualizations"
      mc:Ignorable="d" 
      d:DesignHeight="280" d:DesignWidth="210">
    <Viewbox StretchDirection="Both" Stretch="Uniform">
        <Grid Height="398.095">
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Right" Margin="0,121.429,10,10" Stroke="Black" Width="280">
                <Rectangle.ContextMenu>
                    <ContextMenu StaysOpen="True">
                        <MenuItem x:Name="Broken" Header="'Broken'" IsCheckable="True" Click="OnBroken"/>
                    </ContextMenu>
                </Rectangle.ContextMenu>
                <Rectangle.OpacityMask>
                    <VisualBrush Visual="{DynamicResource appbar_forklift}"/>
                </Rectangle.OpacityMask>
            </Rectangle>
            <!---->
            <Rectangle x:Name="itemArea" Width="100" Height="100" Margin="10,120,190,40" Stroke="#00000000" StrokeThickness="5"/>
            <TextBlock x:Name="state" Height="75.953" Margin="10,0" TextWrapping="Wrap" Text="StateText" VerticalAlignment="Top" Foreground="White" FontSize="50" FontWeight="Bold"/>
        </Grid>
    </Viewbox>
</UserControl>
